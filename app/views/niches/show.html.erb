<%# app/views/niches/show.html.erb %>
<h1 class="text-center mb-4">Liste des Niches</h1>

<div class="nich-grid">
  <%= render 'niches', niches: @niches, selected_nich: @nich %>
  <%= render 'details', nich: @nich %>
</div>

<% if @nich.ai_status == "error" %>
  <p class="text-danger">Erreur lors de la génération. <%= link_to "Réessayer", generate_ai_data_project_niches_path(@project), method: :post, class: "btn btn-danger" %></p>
<% end %>
