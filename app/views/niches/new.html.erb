<%# app/views/niches/new.html.erb %>
<div class="container">
  <div class="row">
    <h1 class="text-center my-5">Renseignez jusqu'à 5 domaines que vous connaissez ou par lesquelles vous êtes intéressé</h1>
    <div class="col-md-8 offset-md-2">


      <!-- Affichage du nom du projet -->
      <%# <h3 class="mb-4"><%= @project.name</h3> %>

      <!-- Formulaire de création de niche -->
      <%= simple_form_for [@project, @nich], html: { class: 'needs-validation', novalidate: true } do |f| %>
        <div class="form-group">
          <%= f.input :name, label: false, input_html: { class: 'form-control rounded-5 mt-5' } %>
        </div>
        <div class="form-group">
          <%= f.submit '+', class: 'btn btn-small mb-5' %>
        </div>
      <% end %>

      <!-- Affichage des niches existantes pour le projet -->
      <% if @niches.any? %>
        <ul class="list-group mt-3">
          <% @niches.each do |niche| %>
            <li class="list-group-item custom"><%= niche.name %></li>
          <% end %>
        </ul>
      <% end %>

      <!-- Lien pour l'étape suivante -->
      <div class="mt-4">

      <% if @niches.any? %>
           <div class="mt-4">
            <%= button_to "démarrer l'étude de marché", generate_ai_data_project_niches_path(@project), method: :post,
            data: { turbo_method: :post },
            class: 'btn btn-home' %>
      <% end %>
      </div>

    </div>
  </div>
</div>
