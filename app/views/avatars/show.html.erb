 <%# app/views/avatars/show.html.erb %>
<% if @avatar %>
  <h1 class='text-center'><%= @category.name %></h1>
  <div class="items-grid">
    <div>
      <%= render 'projects/items' %>
    </div>
    <div>
      <%= render 'avatar', avatar: @avatar %>
    </div>
  </div>
  <% else %>
  <div class="items-grid">
      <div>
        <%= render 'projects/items' %>
      </div>
      <div>
        <%= render 'avatar' %>
      </div>
    </div>
<% end %>
